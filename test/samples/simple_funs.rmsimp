fun add(a: uint8, b: uin8): uint8
locals res: uint8;
{
    entry:
        res := a + b;
        return res;
}

fun mod(a: int16): int16 {
    entry:
        branch a < 0 negative non_negative;

    negative:
        a := -a;
        jump non_negative;

    non_negative:
        return a;
}

fun gauss(n: int32): int32
locals ctr: int32, sum: int32;
{
    entry:
        ctr := 0;
        sum := 0;
        jump header;

    header:
        branch ctr < n body exit;

    body:
        ctr := ctr + 1;
        sum := sum + ctr;
        jump header;

    exit:
        return sum;
    
}