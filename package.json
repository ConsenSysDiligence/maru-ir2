{
    "name": "@consensys/rmsimp",
    "version": "0.7.3",
    "description": "Regioned Memory Safe Imp: A small implemntation of the IMP language with regioned memory, explicit load and store, and memory safety (typed load/store, no arithmetic). Includes an interpreter for testing.",
    "keywords": [],
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "rmsimp": "dist/bin/rmsimp.js"
    },
    "scripts": {
        "clean": "rm -rf dist/",
        "transpile": "tsc",
        "build-parser": "tspegjs -o src/parser/rmsimp_parser.ts --custom-header-file src/parser/rmsimp_header.ts --allowed-start-rules Program --cache src/parser/rmsimp.pegjs",
        "build": "npm run clean && npm run build-parser && npm run transpile && chmod a+x dist/bin/rmsimp.js",
        "lint": "eslint src/ test/ --ext=ts",
        "lint:fix": "eslint src/ test/ --ext=ts --fix",
        "test": "nyc mocha",
        "prepare": "npm run build"
    },
    "dependencies": {
        "decimal.js": "^10.3.1",
        "fs-extra": "^10.0.0",
        "logplease": "1.2.15",
        "minimist": "^1.2.5",
        "semver": "^7.3.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.12",
        "@types/minimist": "^1.2.2",
        "@types/mocha": "^8.2.3",
        "@types/node": "^12.20.16",
        "@types/semver": "^7.3.7",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "expect": "^27.0.6",
        "mocha": "^9.0.2",
        "nyc": "^15.1.0",
        "prettier": "2.3.2",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5",
        "peggy": "^2.0.1",
        "ts-pegjs": "^2.1.0"
    },
    "repository": "<TODO>",
    "license": "SEE LICENSE IN <LICENSE>"
}
